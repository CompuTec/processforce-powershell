<mvc:View
controllerName="computec.appengine.firstplugin.controller.MyToDo"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  xmlns:ae="computec.appengine.ui.controls"
	displayBlock="true"
>
  <tnt:ToolHeader>
  <Input
                  
                  value="{ /task/name }"
                  width = "15%"
                  valueLiveUpdate = "true"
                   />

                   
  <Input
                  value="{ /task/description }"
                  width = "25%"
                  valueLiveUpdate = "true"
                   />
                   
  <Input
                  value="{ /task/priority }"
                  width = "15%"
                  valueLiveUpdate = "true"
                   />
  <Button text="{i18n>AddButton}" press=".onAdd" />
  </tnt:ToolHeader>
            
            <ae:Link
								text="move to MRP"
								objectType="CT_PF_SSC"
								objectSubType="Resource"
								key="{path: 'FP>Code', type: 'sap.ui.model.type.String', targetType : 'any'}">
                </ae:Link>
			<Table
          id="todoList"
          growing="true"
          growingThreshold="10"
          items="{
								path: 'FP>/ToDo',
								parameters: {
									$count: true
								}
              }"
          fixedLayout="false">
        <headerToolbar>
         
        </headerToolbar>
        <columns>
          <Column
              id="TaskNameColumn"
              width="10rem">
            <Text text="{i18n>TaskNameColumn}" />
          </Column>
          <Column id="DescriptionColumn">
            <Text text="{i18n>DescriptionColumn}" />
          </Column>
          <Column
              id="PriorityColumn"
              width="10rem">
            <Text text="{i18n>PriorityColumn}" />
          </Column>
          <Column
              id="ButtonColumn"
              width="5rem">
            <Text text="delete" />

          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <Input
                  value="{ path: 'FP>U_TaskName' }"
                   />
            </cells>
            <cells>
              <Input
                  value="{ path: 'FP>U_Description' }"
                  />
            </cells>
            <cells>
              <Input
                  value="{ path: 'FP>U_Priority' }"/>
            </cells>
            <cells>
              <Button
            id="deleteTaskButton"
            icon="sap-icon://delete"
            press=".onDelete"/>
           
            </cells>
            
          
          </ColumnListItem>
        </items>
      </Table>
  <Table id="idProductsTable"
		inset="false"
		items="{path:'AE>/CustomViews/Views.Custom(Id=\'FirstPlugin%3ASalesOrderList\')'}">
		<columns>
			<Column
				width="12em">
				<Text text="Sales Order" />
			</Column>
			<Column
				hAlign="End">
				<Text text="Go to attachments" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<StandardListItem
          title="{path: 'AE>CardName', type: 'sap.ui.model.odata.type.String'}"
          counter="{path: 'AE>DocNum', type: 'sap.ui.model.odata.type.Int16'}"/>
				</cells>
        <cells>
          
          <Button
          app:CardName = "{path: 'AE>CardName', type: 'sap.ui.model.odata.type.String'}"
          text="Check attachments"
          press=".onOpenDialog">
        </Button>
        </cells>
			</ColumnListItem>
		</items>
	</Table>
      
