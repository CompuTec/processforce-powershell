<mvc:View
controllerName="computec.appengine.firstplugin.controller.MyToDo"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	displayBlock="true"
>

            <Button text="{i18n>DeleteButton}" press="onDelete" />
            <Button text="{i18n>AddButton}" press="onAdd" />
			<Table
          id="todoList"
          growing="true"
          growingThreshold="10"
          items="{
								path: 'FP>/ToDo',
								parameters: {
									$count: true
								}
              }"
          fixedLayout="false">
        <headerToolbar>
         
        </headerToolbar>
        <columns>
          <Column
              id="TaskNameCOlumn"
              width="3rem">
            <Text text="Task Name" />
          </Column>
          <Column id="DescriptionColumn">
            <Text text="{i18n>DescriptionColumn}" />
          </Column>
          <Column
              id="PriorityCOlumn"
              width="3rem">
            <Text text="{i18n>PriorityCOlumn}" />
          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <Input
                  value="{ path: 'FP>U_TaskName' }"
                   />
            </cells>
            <cells>
              <Input
                  value="{ path: 'FP>U_Description' }"
                  />
            </cells>
            <cells>
              <Input
                  value="{ path: 'FP>U_Priority' }"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
</mvc:View>