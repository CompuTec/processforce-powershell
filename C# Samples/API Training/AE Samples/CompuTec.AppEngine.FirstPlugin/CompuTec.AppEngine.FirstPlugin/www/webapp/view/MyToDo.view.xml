<mvc:View
controllerName="computec.appengine.firstplugin.controller.MyToDo"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:ae="computec.appengine.ui.controls"
	displayBlock="true"
>

            <Button text="{i18n>DeleteButton}" press="onDelete" />
            <Button text="{i18n>AddButton}" press="onAdd" />
            <ae:Link
								text=""
								objectType="CT_PF_12"
								objectSubType="Resource"
								key="{path: 'RSC>Code', type: 'sap.ui.model.type.String', targetType : 'any'}">
                </ae:Link>
			<Table
          id="todoList"
          growing="true"
          growingThreshold="10"
          items="{
								path: 'FP>/ToDo',
								parameters: {
									$count: true
								}
              }"
          fixedLayout="false">
        <headerToolbar>
         
        </headerToolbar>
        <columns>
          <Column
              id="TaskNameColumn"
              width="10rem">
            <Text text="{i18n>TaskNameColumn}" />
          </Column>
          <Column id="DescriptionColumn">
            <Text text="{i18n>DescriptionColumn}" />
          </Column>
          <Column
              id="PriorityColumn"
              width="10rem">
            <Text text="{i18n>PriorityColumn}" />
          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <Input
                  value="{ path: 'FP>U_TaskName' }"
                   />
            </cells>
            <cells>
              <Input
                  value="{ path: 'FP>U_Description' }"
                  />
            </cells>
            <cells>
              <Input
                  value="{ path: 'FP>U_Priority' }"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
</mvc:View>